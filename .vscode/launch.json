// Simulates the command: `go run cmd/depth/main.go ./test`
{
        "version": "0.2.0",
        "configurations": [
            
            {
                "name": "cmd debug",
                "type": "go",
                "request": "launch",
                "mode": "debug",
                "args": ["./test"], 

                // path to the main package
                "program": "${workspaceRoot}/cmd/depth",
                // cwd allows you to specify the working directory where you want to run the program
                "cwd": "${workspaceRoot}", 
                "showLog": true
            }
        ]
    }